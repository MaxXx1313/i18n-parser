{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "baseUrl": "./src",
    "outDir": "dist",
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "types": ["node"]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
