{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "baseUrl": "./src",
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es2017",
    "types": ["node"],
    "paths": {
      "@xafer-types": [
        "../../xafer-types/src/index"
      ]
    }
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
